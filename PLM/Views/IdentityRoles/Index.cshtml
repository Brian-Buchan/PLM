@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "List of User Roles";
}
    <section id="page-breadcrumb">
        <div class="vertical-center sun">
            <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Roles</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = role.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = role.Id })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Back to Administration Page", "Admin", "Home")
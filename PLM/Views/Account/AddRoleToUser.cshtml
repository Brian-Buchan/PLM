@ViewBag.Title ="Add Role to User";
    <section id="page-breadcrumb">
        <div class="vertical-center sun">
            <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Add Role</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h3>User Name: @ViewBag.UserName</h3>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
    }
    @using (Html.BeginForm("AddRoleToUser", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <p>
            Role Name: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
        </p>
        @Html.Hidden("userName", ViewBag.UserName as string)
        <input type="submit" value="Save" />
    }<a href="~/Account/Index">Click here to return to the list of users.</a>
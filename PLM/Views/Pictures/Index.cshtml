@model IEnumerable<PLM.Picture>
@{
    ViewBag.Title = " Picture Index";
}
<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Answer.AnswerString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attribution)
        </th>
        <th>

        </th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Answer.AnswerString)
        </td>
        <td>
            @Html.Action("PictureView", "Pictures", new { pic = new PLM.Models.PictureToView(item) })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attribution)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PictureID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PictureID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PictureID })
        </td>
    </tr>
}
</table>

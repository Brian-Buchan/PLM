@model PLM.Models.PictureToView

@{
    if (Model.PictureData == null)
    {
        <img src="Content/Images/Error.bmp" />
    }
    else
    {
        string PictureData64 = Model.PictureData;
        string PictureSRC = string.Format("data:{0};base64,{1}", "image/png", PictureData64);
        <img @*onerror="this.src='Content/images/Error.bmp';"*@ src="@PictureSRC" style="height: 200px; width:auto" />
    }
}
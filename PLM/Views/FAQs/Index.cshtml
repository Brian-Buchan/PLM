@model IEnumerable<PLM.FAQ>

@{
//ViewBag.Title = "Frequently Asked Questions";
}
<br /><br />
<div class="col-lg-12  text-center"><h1>@ViewBag.Title</h1></div>
<hr />
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<div id="accordion-container">
    <div class="panel-group" id="accordion">

        @{ var firstpanel = 1; var defexpand = " in "; }

    @foreach (var item in Model)
    {
        <span>&nbsp;</span>
        {
            if (firstpanel != 1) { defexpand = ""; }
            firstpanel++;
        }

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title accordianHeading">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(item.SortOrder)">
                        @Html.DisplayFor(modelItem => item.Question)
                    </a>
                </h4>
            </div>
            <div id="collapse@(item.SortOrder)" class="panel-collapse collapse @(defexpand)">
                <div class="panel-body">
                    <h3>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Answer) </h3>
 
                    @if (User.IsInRole("Admin"))
                    {
                        <br />
                        <div class="col-sm-2">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </div>
                        <br />
                    }

                </div>
               

            </div>
        </div>




       
    }

    </div>
</div>
<script type="text/javascript" src="~/Scripts/jquery.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript" src="~/Scripts/gmaps.js"></script>
<script type="text/javascript" src="~/Scripts/wow.min.js"></script>
<script type="text/javascript" src="~/Scripts/main.js"></script>

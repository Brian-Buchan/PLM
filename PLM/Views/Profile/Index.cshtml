@model IEnumerable<PLM.Module>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Profile";
    var name = User.Identity.GetFirstName() + " " + User.Identity.GetLastName();
    var instution = User.Identity.GetInstution();
    var email = User.Identity.GetUserName();
    var location = ViewBag.location;

}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Modules</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet">
    <link href="~/Conetnt/lightbox.css" rel="stylesheet">
    <link href="~/Content/main.css" rel="stylesheet">
    <link href="~/Content/responsive.css" rel="stylesheet">

</head><!--/head-->

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Your Profile</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="jumbotron">
    <form action="~/Profile/CreateProfile" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="width: 50px; background: none; border: none;">
        @Html.AntiForgeryToken()
        <div class="fallback">
            <input name="file" type="file" multiple />
            <input type="submit" value="Upload" />
        </div>
    </form>
</div>


<img onerror="this.src='~/Content/images/home/ThinkGraphicColor.jpg';" class="floatLeft" src="@location" alt="Profile Picture" height="200" width="200" />

<article>
    <h3 class="accordianHeading">Name:</h3>
    <p>@name</p>

    <h3 class="accordianHeading">Email:</h3>
    <p>@email</p>

    <h3 class="accordianHeading">Institution:</h3>
    <p>@instution</p>

    @Html.ActionLink("Reset your password", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
    <br /><br />
</article>
    <article>
        @Html.ActionLink("Reset your password", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })

    </article>


<div>
    <table class="table">
        <caption>Courses Created:</caption>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                Answer Count
            </th>
            <th>
                Private
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @item.Answers.Count()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPrivate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { controller = "ModulesEDIT", id = item.ModuleID }) |
                    @*@Html.ActionLink("Details", "Details", new { controller = "ModulesEDIT", id = item.ModuleID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { controller = "ModulesEDIT", id = item.ModuleID })
                </td>
            </tr>
        }

    </table>

</div>


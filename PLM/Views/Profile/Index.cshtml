            <h3 class="accordianHeading">Institution:</h3>
            <p>@instution</p>

            @Html.ActionLink("Reset your password", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
            <br /><br />
        </article>*@


    <div>
        <table class="table">
            <thead class="table-header">Courses Created:</thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th>
                    Answer Count
                </th>
                <th>
                    Private
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @item.Answers.Count()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isPrivate)
                    </td>
                    <td>
                        @Html.ActionLink("Add Answer", "Create", new { controller = "Answers", id = item.ModuleID })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { controller = "ModulesEDIT", id = item.ModuleID }) |
                        @Html.ActionLink("Delete", "Delete", new { controller = "ModulesEDIT", id = item.ModuleID })
                    </td>
                </tr>
            }

        </table>

    </div>

    <br />
    <br />
    <div class="clearLeft floatRight">
        @Html.ActionLink("Create New", "Create", new { controller = "ModulesEdit" }, new { type = "button" })
    </div>

    <br />
    <br />



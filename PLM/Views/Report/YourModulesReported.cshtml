@model IEnumerable<PLM.Models.Report>

@{
    ViewBag.Title = "Issues with your modules";
}

<h2>Issues with your modules</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.moduleID)
        </th>
        <th width="600px" style="overflow:hidden">
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.moduleID)
        </td>
        <td width="600px" style="overflow:hidden">
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
        </td>
    </tr>
}

</table>
@Html.ActionLink("Back to Profile Page", "Index", "Profile")
@model IEnumerable<PLM.Models.Report>
@{
    ViewBag.Title = "Reports";
}
    <section id="page-breadcrumb">
        <div class="vertical-center sun">
            <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Reports Administration</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.moduleID)
            </th>
            <th width="400px" style="overflow:hidden">
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.moduleID)
                </td>
                <td width="500px" style="overflow:hidden">
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Back to Administration Page", "Admin", "Home")
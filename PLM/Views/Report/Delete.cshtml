@model PLM.Models.Report
@{
    ViewBag.Title = "Delete Report";
}
    <br />
    <section id="page-breadcrumb">
        <div class="vertical-center sun">
            <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Delete Report</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.moduleID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.moduleID)
            </dd>
            <dt>
               User who reported it
            </dt>
            <dd>
                @Html.DisplayFor(model => model.userID)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.category)
            </dd>
        </dl>
        <h1>@Html.DisplayNameFor(model => model.description)</h1>
        <div class="descriptionBox">
            @Html.DisplayFor(model => model.description)
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @{
            if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Back to List", "Index")
            }
            else
            {
                @Html.ActionLink("Back to List", "YourReports")
            }
                }
            </div>
        }
    </div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    @Styles.Render("~/Content/css")
    <title>PLM | @ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")

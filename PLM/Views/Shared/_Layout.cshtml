                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Home", "Index", "Home", new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.png" class="navbar-brand" id="navImg" /></a></li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                    <li>@Html.ActionLink("Modules", "Index", "Modules")</li>
                    <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>
                    @*<li>@Html.ActionLink("Blog", "Blog", "Home")</li>*@
                    @*<li>@Html.ActionLink("Game", "Play", "Game")</li>*@
                    @*<li>@Html.ActionLink("Edit Answers", "Index", "Answers")</li>
                    <li>@Html.ActionLink("Edit Modules", "Index", "ModulesEDIT")</li>
                    <li>@Html.ActionLink("Edit Pictures", "Index", "Pictures")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
